# Database
DATABASE_URL=postgresql://username:password@localhost:5432/aithreadstash
# Or specify individual settings (takes effect when DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=
DB_NAME=aithreadstash

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Server
PORT=3001
NODE_ENV=development
# Public URLs for local development
API_URL=http://localhost:3007
FRONTEND_URL=http://localhost:3000

# Encryption
ENCRYPTION_KEY=your-super-secret-encryption-key-change-in-production

# GitHub OAuth (optional in development)
ENABLE_GITHUB_OAUTH=1
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3007/auth/github/callback

# Google OAuth (optional in development)
ENABLE_GOOGLE_OAUTH=1
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# For the current default flow (GoogleSimpleController), the callback is /auth/google/callback
GOOGLE_CALLBACK_URL=http://localhost:3007/auth/google/callback
# For Passport Strategy based flow used by GoogleAuthController
GOOGLE_PASSPORT_CALLBACK_URL=http://localhost:3007/auth/google-passport/callback

# Proxy support (for restricted networks)
# HTTPS_PROXY=http://proxy.example.com:8080
# HTTP_PROXY=http://proxy.example.com:8080
# ALL_PROXY=socks5://proxy.example.com:1080

# Notion OAuth (optional - for future use)
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret

# Stripe Payments
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_PRICE_ID_MONTHLY=price_your_monthly_price_id
STRIPE_PRICE_ID_YEARLY=price_your_yearly_price_id