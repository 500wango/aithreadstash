# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/aithreadstash_prod
# Or specify individual settings (takes effect when DATABASE_URL is not set)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=
DB_NAME=aithreadstash_prod

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-for-production-min-32-chars

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-production-client-id
GITHUB_CLIENT_SECRET=your-github-production-client-secret
GITHUB_CALLBACK_URL=https://api.aithreadstash.com/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your-google-production-client-id
GOOGLE_CLIENT_SECRET=your-google-production-client-secret
# For the current default server flow, the callback is /auth/google/callback
GOOGLE_CALLBACK_URL=https://api.aithreadstash.com/auth/google/callback
# For Passport Strategy based flow used by GoogleAuthController
GOOGLE_PASSPORT_CALLBACK_URL=https://api.aithreadstash.com/auth/google-passport/callback

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your-stripe-live-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-production-webhook-secret

# Notion Integration
NOTION_CLIENT_ID=your-notion-production-client-id
NOTION_CLIENT_SECRET=your-notion-production-client-secret

# Server Configuration
PORT=3007
NODE_ENV=production
API_URL=https://api.aithreadstash.com

# CORS Configuration
FRONTEND_URL=https://aithreadstash.com

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100