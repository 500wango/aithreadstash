{
  "manifest_version": 3,
  "name": "AI ThreadStash 会话导出助手",
  "version": "0.2.8",
  "description": "一键导出ChatGPT对话记录，支持多平台扩展。",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs",
    "windows"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://claude.ai/*",
    "https://www.deepseek.com/*",
    "https://chat.deepseek.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["content_scripts/chatgpt.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://gemini.google.com/*"],
      "js": ["content_scripts/gemini.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content_scripts/claude.js"],
      "run_at": "document_idle"
    },

    {
      "matches": ["https://www.deepseek.com/*", "https://chat.deepseek.com/*"],
      "js": ["content_scripts/deepseek.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://aithreadstash.com/*", "http://localhost:3000/*", "http://localhost:3001/*"],
      "js": ["content_scripts/site-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "options_page": "popup/options.html",
  "default_locale": "en",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["preview/*"],
      "matches": ["<all_urls>"]
    }
  ]
}